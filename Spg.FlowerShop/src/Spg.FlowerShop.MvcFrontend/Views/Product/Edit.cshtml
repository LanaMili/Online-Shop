@using Spg.FlowerShop.Domain.Model;
@model Spg.FlowerShop.Domain.DataTransferObjects.ProductDto

<h4>Edit Product: @Model.ProductName</h4>
<hr />


<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input type ="hidden" asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CurrentPrice" class="control-label"></label>
        <input asp-for="CurrentPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Ean" class="control-label"></label>
        <input asp-for="Ean" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductImage" class="control-label"></label>
        <input asp-for="ProductImage" class="form-control" />
    </div>
    <br><br>
    <div class="form-group">
        @Html.DropDownListFor(p=>p.ProductCategoryID , new SelectList(@ViewBag.ProductCategories, "Guid", "Description"))
    </div>
    <br><br>
    <button type="submit">Senden</button>
</form>

